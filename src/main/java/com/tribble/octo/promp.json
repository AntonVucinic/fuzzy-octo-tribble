{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "VAT Information Schema",
    "type": "object",
    "properties": {
      "vatRates": {
        "type": "object",
        "properties": {
          "standardRate": { "type": "number" },
          "reducedRates": {
            "type": "array",
            "items": { "type": "number" }
          },
          "zeroRate": { "type": "boolean" },
          "exemptions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "specialRates": {
            "type": "object",
            "additionalProperties": { "type": "number" }
          }
        },
        "required": ["standardRate"]
      },
      "registrationRequirements": {
        "type": "object",
        "properties": {
          "thresholds": { "type": "number" },
          "voluntaryRegistration": { "type": "boolean" },
          "foreignCompanyRules": {
            "type": "string"
          }
        },
        "required": ["thresholds"]
      },
      "filingAndCompliance": {
        "type": "object",
        "properties": {
          "filingFrequency": { "type": "string" },
          "requiredDocumentation": {
            "type": "array",
            "items": { "type": "string" }
          },
          "electronicFiling": { "type": "boolean" },
          "deadlines": { "type": "string" },
          "penalties": { "type": "string" }
        },
        "required": ["filingFrequency", "deadlines"]
      },
      "inputVatRecovery": {
        "type": "object",
        "properties": {
          "eligibleCosts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "exclusions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "timeLimits": { "type": "string" },
          "process": { "type": "string" }
        },
        "required": ["eligibleCosts"]
      },
      "crossBorderTransactions": {
        "type": "object",
        "properties": {
          "imports": { "type": "string" },
          "exports": { "type": "string" },
          "intraEUTransactions": { "type": "string" },
          "digitalServices": { "type": "string" }
        },
        "required": []
      },
      "industrySpecificRules": {
        "type": "object",
        "properties": {
          "sectors": {
            "type": "array",
            "items": { "type": "string" }
          },
          "eCommerceRules": { "type": "string" }
        },
        "required": []
      },
      "localVatAuthorities": {
        "type": "object",
        "properties": {
          "contactInformation": { "type": "string" },
          "guidanceDocuments": {
            "type": "array",
            "items": { "type": "string" }
          },
          "advisoryServices": { "type": "boolean" }
        },
        "required": ["contactInformation"]
      },
      "transitionalRules": {
        "type": "object",
        "properties": {
          "newLegislation": { "type": "string" },
          "recentReforms": { "type": "string" }
        },
        "required": []
      },
      "languageAndCulturalFactors": {
        "type": "object",
        "properties": {
          "documentationLanguage": { "type": "string" },
          "localPractices": { "type": "string" }
        },
        "required": []
      },
      "currencyAndConversion": {
        "type": "object",
        "properties": {
          "localCurrencyReporting": { "type": "string" },
          "dualCurrencyTransactions": { "type": "string" }
        },
        "required": []
      },
      "refundsForForeignBusinesses": {
        "type": "object",
        "properties": {
          "eligibility": { "type": "string" },
          "procedure": { "type": "string" },
          "reciprocity": { "type": "boolean" }
        },
        "required": ["eligibility"]
      },
      "vatSoftwareAndAutomation": {
        "type": "object",
        "properties": {
          "localRequirements": { "type": "string" },
          "integration": { "type": "string" }
        },
        "required": []
      },
      "vatRepresentation": {
        "type": "object",
        "properties": {
          "fiscalRepresentativeRequired": { "type": "boolean" },
          "responsibilities": { "type": "string" }
        },
        "required": []
      },
      "auditAndInspection": {
        "type": "object",
        "properties": {
          "recordKeepingPeriod": { "type": "string" },
          "auditTriggers": { "type": "string" },
          "appealsProcess": { "type": "string" }
        },
        "required": []
      },
      "sources": {
        "type": "object",
        "properties": {
          "governmentPortals": {
            "type": "array",
            "items": { "type": "string" }
          },
          "consultancyFirms": {
            "type": "array",
            "items": { "type": "string" }
          },
          "businessForums": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["governmentPortals"]
      }
    },
    "required": ["vatRates", "registrationRequirements", "filingAndCompliance"]
  }
  